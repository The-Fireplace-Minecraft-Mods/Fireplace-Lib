{
  "schemaVersion": 1,
  "id": "fireplacelib",
  "version": "${version}",
  "name": "${readable_name}",
  "description": "${mod_description}",
  "authors": [
    "The_Fireplace"
  ],
  "contact": {
    "homepage": "${fabric_curseforge_url}",
    "sources": "${github_url}",
    "issues": "${github_url}/issues",
    "modrinth": "${modrinth_url}"
  },
  "license": "${license_id}",
  "icon": "${logo_filename}",
  "environment": "*",
  "entrypoints": {
    "di-main": [
      "dev.the_fireplace.lib.entrypoints.Main"
    ],
    "di-client": [
      "dev.the_fireplace.lib.entrypoints.Client"
    ],
    "modmenu": [
      "dev.the_fireplace.lib.entrypoints.ModMenu"
    ],
    "fireplacelib": [
      "dev.the_fireplace.lib.entrypoints.ConfigGui"
    ]
  },
  "mixins": [
    "fireplacelib.mixins.json",
    "fireplacelib.fabric.mixins.json",
    "fireplacelib.optional.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.0",
    "fabric": "*",
    "minecraft": "1.15.X",
    "annotateddi": ">=4 <5"
  },

  "suggests": {
    "modmenu": "*"
  }
}
