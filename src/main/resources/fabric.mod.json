{
  "schemaVersion": 1,
  "id": "fireplacelib",
  "version": "${version}",

  "name": "Fireplace Lib",
  "description": "A library of common functionality used by my mods, in one place for easier maintenance and faster updates.",
  "authors": [
    "The_Fireplace"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/fireplace-lib",
    "sources": "https://github.com/The-Fireplace-Minecraft-Mods/Fireplace-Lib",
    "issues": "https://github.com/The-Fireplace-Minecraft-Mods/Fireplace-Lib/issues"
  },

  "license": "MIT",
  "icon": "assets/fireplacelib/logo.png",

  "environment": "*",
  "entrypoints": {
    "di-main": [
      "dev.the_fireplace.lib.entrypoints.Main"
    ],
    "client": [
      "dev.the_fireplace.lib.entrypoints.Client"
    ],
    "modmenu": [
      "dev.the_fireplace.lib.entrypoints.ModMenu"
    ],
    "fireplacelib": [
      "dev.the_fireplace.lib.entrypoints.ConfigGui"
    ]
  },
  "mixins": [
    "fireplacelib.mixins.json",
    "optional.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.0",
    "fabric": "*",
    "minecraft": ">=1.17",
    "annotateddi": ">=2 <3"
  },

  "suggests": {
    "modmenu": ">2.0.2"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/QXQYPj5"
      },
      "badges": [ "library" ]
    }
  }
}
